<p id="notice"><%= notice %></p>

<h1>Attachments</h1>

<table id="files" class="files">
  <thead>
    <tr>
      <th>File ID</th>
      <th>Uploader ID</th>
      <th>Preview<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.id %></td>
        <td><%= attachment.user_id %></td>
        <td><%= image_tag attachment.file_url(:thumb) if attachment.file_url %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', attachment %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>